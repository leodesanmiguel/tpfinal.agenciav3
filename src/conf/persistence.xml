<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="TPFinalv2PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>polo.logica.Cliente</class>
    <class>polo.logica.Empleado</class>
    <class>polo.logica.FormaDPago</class>
    <class>polo.logica.Paquete</class>
    <class>polo.logica.Persona</class>
    <class>polo.logica.Puesto</class>
    <class>polo.logica.Servicio</class>
    <class>polo.logica.Usuario</class>
    <class>polo.logica.Venta</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/polo_agencia_v3?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="usrpolo"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="12345"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
